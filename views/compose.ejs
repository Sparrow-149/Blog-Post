<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle" class="form-label"><strong>Title</strong></label>
            <input type="text" name="postTitle" id="postTitle" class="form-control">
        </div>
        <div class="form-group">
            <label for="postBody" class="form-label"><strong>Post</strong></label>
            <textarea name="postBody" id="postBody" class="form-control" rows="5"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary" style="margin-top: 20px;">Publish</button>
    </form>
<%- include("partials/footer"); -%>